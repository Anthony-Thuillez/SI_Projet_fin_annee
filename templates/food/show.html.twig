{% extends 'base.html.twig' %}

{% block title %}Food{% endblock %}

{% block body %}
    <h1>Food</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ food.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ food.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ food.description }}</td>
            </tr>
            <tr>
                <th>Img_src</th>
                <td>{{ food.imgSrc }}</td>
            </tr>
            <tr>
                <th>Img_alt</th>
                <td>{{ food.imgAlt }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ food.price }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ food.quantity }}</td>
            </tr>
            <tr>
                <th>Kind</th>
                <td>{{ food.kind }}</td>
            </tr>
            <tr>
                <th>Available</th>
                <td>{{ food.available ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('food_index') }}">back to list</a>

    <a href="{{ path('food_edit', {'id': food.id}) }}">edit</a>

    {{ include('food/_delete_form.html.twig') }}
{% endblock %}