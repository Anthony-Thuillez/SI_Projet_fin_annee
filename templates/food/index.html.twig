{% extends 'base.html.twig' %}

{% block title %}Food index{% endblock %}

{% block body %}
    <h1>Food index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Img_src</th>
                <th>Img_alt</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Kind</th>
                <th>Available</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for food in foods %}
            <tr>
                <td>{{ food.id }}</td>
                <td>{{ food.name }}</td>
                <td>{{ food.description }}</td>
                <td>{{ food.imgSrc }}</td>
                <td>{{ food.imgAlt }}</td>
                <td>{{ food.price }}</td>
                <td>{{ food.quantity }}</td>
                <td>{{ food.kind }}</td>
                <td>{{ food.available ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('food_show', {'id': food.id}) }}">show</a>
                    <a href="{{ path('food_edit', {'id': food.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('food_new') }}">Create new</a>
{% endblock %}