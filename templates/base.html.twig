<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Xenoshop{% endblock %}</title>
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" type="text/css" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('build/css/app.css') }}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <header class="header">
          <div class="header__container">
            <h1 class="header__title"><a class="header__titleLink" href="http://localhost:8000/pages/index">Xénoshop</a></h1>

            <nav class="header__nav">
              <ul class="header__nav__listContent">
                <li class="header__nav__list"><a class="header__nav__listLink" href="http://localhost:8000/pages/sheetXeno">Xenomorph</a></li>
                <li class="header__nav__list"><a class="header__nav__listLink" href="#">Vivarium</a></li>
                <li class="header__nav__list"><a class="header__nav__listLink" href="#">Alimentation</a></li>
                <li class="header__nav__listSearch">
                  <input class="header__nav__search" type="text" name="research" placeholder="rechercher" value="">
                  <img class="header__nav__logoSearch" src="{{ asset('images/nav/search.png') }}" alt="Search">
                </li>
                <li class="header__nav__list">
                  <a href="http://localhost:8000/pages/shopping">
                    <img class="header__nav__logo" src="{{ asset('images/nav/shopping_bag.png') }}" alt="Panier">
                  </a>
                </li>
                <li class="header__nav__list">
                  <a href="http://localhost:8000/pages/profil">
                    <img class="header__nav__logo" src="{{ asset('images/nav/octopus.png') }}" alt="Profil">
                  </a>
                </li>
              </ul>
            </nav>

          </div>
        </header>

        {% block body %}{% endblock %}

        {% block javascripts %}{% endblock %}
        <footer class="footer">
            <div class="footer__container">
                <div class="footer__info">
                    <p class="footer__info__text"><a class="footer__infoLegal__textLink" href="#">Qui sommes-nous ?</a></p>
                    <p class="footer__info__text"><a class="footer__infoLegal__textLink" href="#">Moyen de payement</a></p>
                    <p class="footer__info__text"><a class="footer__infoLegal__textLink" href="#">Besoin d'aide ?</a></p>
                </div>
                <div class="footer__infoLegal">
                    <p class="footer__infoLegal__text"><a class="footer__infoLegal__textLink" href="#">Conditions générales de vente</a></p>
                    <p class="footer__infoLegal__text"><a class="footer__infoLegal__textLink" href="#">Vos informations personnelles</a></p>
                    <p class="footer__infoLegal__text"><a class="footer__infoLegal__textLink" href="#">Cookies</a></p>
                </div>
            </div>
            <p class="footer__copyright">@2018, Xenoshop</p>
        </footer>

        <nav class="mobile__nav">
          <ul class="mobile__nav__listContent">
            <li id="menuBurger" class="mobile__nav__list">
              <img class="mobile__nav__logo" src="{{ asset('images/nav/menu.png') }}" alt="menu">
            </li>
            <li id="search" class="mobile__nav__list">
              <img class="mobile__nav__logo" src="{{ asset('images/nav/search.png') }}" alt="Search">
            </li>
            <li id="shoppingBag" class="mobile__nav__list">
              <a href="http://localhost:8000/pages/shopping">
                <img class="mobile__nav__logo" src="{{ asset('images/nav/shopping_bag.png') }}" alt="Panier">
              </a>
            </li>
            <li id="profil" class="mobile__nav__list">
                <a href="http://localhost:8000/pages/profil">
                  <img class="mobile__nav__logo" src="{{ asset('images/nav/octopus.png') }}" alt="Profil">
              </a>
            </li>
          </ul>
        </nav>

        <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js" type="text/javascript"></script>
        <script src="{{ asset('build/js/app.js') }}"></script>
    </body>
</html>
